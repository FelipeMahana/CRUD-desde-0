<h5>
	<%= notice %>
</h5>


<h1>Index</h1>


<table>
	<tr>
		<th>Titulo</th>
		<th>Contenido</th>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<td><%= link_to post.title, post_path(post.id) %></td>
		<td><%= post.content %></td>
		<td><%= link_to 'Editar', edit_post_path(post) %></td>
		<td><%= link_to 'Eliminar', destroy_post_path(post), method: :delete %></td>
	</tr>
	<% end %>
</table>

<br>
<%= link_to 'crear nuevo post', posts_new_path %>
